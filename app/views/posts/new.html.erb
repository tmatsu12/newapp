<div class="container">
  <div class="row">
    <div class="col-9 mt-5">
      <div class="form-group">
        <%= form_with model:@post, local:true do |f| %>
          <div class="form-group">
            <%= f.label :タイトル %><br />
            <%= f.text_field :title, class: "col-12 form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :内容 %><br />
            <%= f.text_area :body, class: "col-12 form-control" %>
          </div>
          <div class="actions">
            <%= f.submit '投稿',class: "btn btn-success" %>
          </div>
        <% end %>
      </div>




    </div>
    <div class="col-3 mt-5">
      <%= link_to "#{@prefecture.name}の投稿一覧に戻る", posts_path(prefecture_id: params[:prefecture_id]), class: "btn btn-success" %>
    </div>


  </div>

</div>