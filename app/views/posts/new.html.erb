<div class="container">
  <div class="row">
    <div class="col-9 mt-5">
      <div class="form-group">
        <%= form_with model:@post, local:true do |f| %>
          <div class="form-group">
            <%= f.label :どこに住んでますか？、又は住んでましたか？ %><br />
            <%= f.text_field :title, class: "col-9 form-control border border-dark", placeholder: "市町村名" %>
          </div>
          <div class="form-group">
            <%= f.label :画像 %><br />
            <%= f.attachment_field :image %>
          </div>

          <div class="form-group" id="star">
            <%= f.label :総合的な満足度 %><br/>
            <%= f.hidden_field :evaluation, id: :review_star %>
          </div>

          <div class="form-group">
            <%= f.label :内容 %><br />
            <%= f.text_area :body, rows: 6, class: "col-9 form-control border border-dark", placeholder: template %>
          </div>

          <%= f.hidden_field :prefecture_id, value:params[:prefecture_id] %>

          <div class="actions">
            <%= f.submit '投稿',class: "btn btn-success" %>
          </div>
        <% end %>
      </div>




    </div>
    <div class="col-3 mt-5">
      <%= link_to "#{@prefecture.name}の投稿一覧に戻る", posts_path(prefecture_id: params[:prefecture_id]), class: "btn btn-success" %>
    </div>


  </div>

</div>

<script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'post[evaluation]',
    half: true,
  });
  </script>