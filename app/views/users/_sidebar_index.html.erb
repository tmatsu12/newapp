<h2 class="mb-3">ユーザー情報</h2>
<% if user_signed_in? %>
  <%= link_to user_path(user) do %>
    <%= attachment_image_tag user, :profile_image, class:"rounded-lg", fallback: "no_image.png", size: "150x150" %>
  <% end %>
  <p class="mt-2">名前：<%= user.name %></p>

  <% if user.prefecture2 %>
    <p>住んでいる（いた）県：<%= user.prefecture2.name %></p>
  <% else %>
    <p>住んでいる（いた）県：未入力</p>
  <% end %>

  <% if user.prefecture1 %>
    <p>住んでみたい県：<%= user.prefecture1.name %></p>
  <% else %>
    <p>住んでみたい県：未入力</p>
  <% end %>

<% else %>
  <p>まだログインしていません</p>
<% end %>

<!--sidebar・・・regionページのサイドバー-->
<!--sidebar1との違い・・・regionページには新規投稿ボタンをつけなかった-->

<%= link_to "#{prefecture.name}に関する新規投稿", new_post_path(prefecture_id: prefecture.id), class: "btn btn-info btn-block rounded-pill" %>

<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="form-group mt-4">
    <%= f.text_field :content, required: true, class: "form-control", placeholder: "市町村名で検索！" %>
  </div>
  <div class="form-group">
    <%= f.select :method, [["完全一致", "perfect"], ["部分一致", "partial"] ] %>
    <%= f.submit '検索', class: "btn btn-secondary btn-sm ml-3" %>
  </div>
<% end %>

